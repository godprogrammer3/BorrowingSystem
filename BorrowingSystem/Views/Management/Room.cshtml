
@{
    ViewData["Title"] = "Room";
}

<header>
    <span class="material-icons" id="roomIcon" onclick="window.location = '/management';">
            arrow_back
    </span>
    <h1 class="roomHeader">@ViewBag.name</h1>
    <output>09:22</output>
    <img src="~/img/user-profile.svg" alt="user profile picture" width="50" />
</header>

<div class="managementPage">
    <section id="bodyContentOnloading" style="display:block;">
        <div class="loader" id="loadingTabLoader"></div>
    </section>
    <section id="bodyContentOnSuccess" style="display:none;">
    </section>
    <section id="bodyContentOnError" style="display:none;">
        <header>Failed! Please try again.</header>
        <section>
            <button onclick="initialBodyContent();">Try again.</button>
        </section>
    </section>
    <section class="popup" id="popup">
        <section class="popup-content">
            <section id="popupOnInitial" style="display:none">
                <header id="popupOnInitialHeader">
                </header>
                <section id="popupOnInitialBody">
                </section>
                <footer class="center-row-flex">
                    <button onclick="document.getElementById('popup').style.display = 'none';" class="popup-button popup-button-secondary" >cancel</button>
                    <button id="popupOnInitialCofirmButton" class="popup-button popup-button-primary"></button>
                </footer>
            </section>
            <section id="popupOnLoading" style="display:none">
                <header>
                    <h3  class="popup-header">Please wait a moment...</h3>
                </header>
                <div class="center-row-flex">
                    <div class="loader"></div>
                </div>
            </section>
            <section id="popupOnSuccess" style="display:none;">
                <header>
                    <h3 class="popup-header">Successed.</h3>
                </header>
                <div class="center-row-flex">
                    <span class="material-icons popup-icon correct-icon">
                        check_circle
                    </span>
                </div>
                <footer  class="center-row-flex">
                    <button id="popupOnSuccessConfirmButton" ;" class="popup-button popup-button-primary">ok</button>
                </footer>
            </section>
            <section id="popupOnError" style="display:none;">
                <hader>
                    <h3 class="popup-header">Failed!</h3>
                    <h4 class="popup-header-2">Please try again.</h4>
                </hader>
                <div class="center-row-flex">
                    <span class="material-icons popup-icon incorrect-icon">
                        cancel
                    </span>
                 </div>
                    <footer>
                        <button onclick="document.getElementById('popup').style.display = 'none';document.getElementById('popupOnError').style.display='none'">ok</button>
                    </footer>
            </section>
        </section>
    </section>
</div>
<script src="~/js/ManagementRoom.js"></script>


