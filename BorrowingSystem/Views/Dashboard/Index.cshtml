
@{
    ViewData["Title"] = "Index";
}

<header id="header">
    <h1 class="pageHeader" style="margin-left:20px;margin-right:20px;">Welcome</h1>
    <output id="currentTime">09:22</output>
    <div style="flex:1;"></div>
    <span id="userFullName">User Name</span>
    <img id="userProfileImage" src="~/img/user-profile.svg" alt="user profile picture" width="50" height="50"/>
</header>
<section id="bodySection">
    <section id="roomSection">
        <header id="headerMainRoom">
            <h3> Main Room</h3>
        </header>
        <section id="roomSectionOnLoading" style="display:block">
            <div class="loader"></div>
        </section>
        <section id="roomSectionOnSuccess" style="display:none">
            
        </section>
        <section id="roomSectionOnError" style="display:none">
            <header>Failed! Please try again.</header>
            <section>
                <button onclick="initialMainRoom();">Try again.</button>
            </section>
        </section>
    </section>
    <section id="roomDetailSection">
        <section id="roomDetailAvailableSection">
            <section id="roomDetailAvailableSectionOnLoading" style="display:block">
                <div class="loader"></div>
            </section>
            <section id="roomDetailAvailableSectionOnSuccess" style="display:none">
            </section>
            <section id="roomDetailAvailableSectionOnError" style="display:none">
                <header>
                    <h3> Failed! Please try again.</h3>
                    <h4 id="roomDetailAvailableSectionOnErrorMessage"></h4>
                </header>
                <section>
                    <button onclick="initialMainRoom()">Try again.</button>
                </section>
            </section>
        </section>
        <section id="roomReservation" style="display:none;">
            <section id="roomReservationOnLoading" style="display:block">
                <div class="loader"></div>
            </section>
            <section id="roomReservationOnSuccess" style="display:none">
                <section id="roomReservationOnSuccessUser" style="display:block">
                    <h4>Borrow</h4>
                    <form onsubmit="createReservationHandler(event);">
                        <div id="selectDate">
                            <label for="startDate">Date</label>
                            <input type="date" id="startDate">
                            <br />

                        </div>
                        <div id="selectTime">
                            <label for="startTime">Start at</label>
                            <select id="startTime">
                                <option value="9">0 9 : 0 0 </option>
                                <option value="10">1 0 : 0 0 </option>
                                <option value="11">1 1 : 0 0 </option>
                                <option value="12">1 2 : 0 0 </option>
                                <option value="13">1 3 : 0 0 </option>
                                <option value="14">1 4 : 0 0 </option>
                                <option value="15">1 5 : 0 0 </option>
                                <option value="16">1 6 : 0 0 </option>
                                <option value="17">1 7 : 0 0 </option>
                                <option value="18">1 8 : 0 0 </option>
                                <option value="19">1 9 : 0 0 </option>
                                <option value="20">2 0 : 0 0 </option>
                                <option value="21">2 1 : 0 0 </option>
                            </select>
                        </div>
                        <section id="durationTimeSection" style="display:block">
                            <label for="durationTime">Duration of time</label>
                            <span class="material-icons" onclick="decreaseTimeDutationHandler(event);">
                                remove
                            </span>
                            <input type="text" id="durationTime" value="1" />
                            <label for="durationTime">Hours</label>
                            <span class="material-icons" onclick="increaseTimeDutationHandler(event);">
                                add
                            </span>
                        </section>
                        <section class="center-row-flex"> 
                            <button type="submit" class="popup-button popup-button-primary">Reserve</button>
                        </section>
                       
                    </form>
                </section>
                <section id="roomReservationOnSuccessAdmin" style="display:none">
                    <section id="roomReservationOnSuccessAdminOnLoading" style="display:block;">
                        <div class="loader"></div>
                    </section>
                    <section id="roomReservationOnSuccessAdminOnSuccess" style="display:none;"></section>
                    <section id="roomReservationOnSuccessAdminOnError" style="display:none;">
                        <header>
                            <h3> Failed! Please try again.</h3>
                            <h4 id="roomReservationOnSuccessAdminOnErrorMessage"></h4>
                        </header>
                        <section>
                            <button onclick="initialMainRoom()">Try again.</button>
                        </section>
                    </section>
                </section>
            </section>
            <section id="roomReservationOnError">
                <header>
                    <h3> Failed! Please try again.</h3>
                    <h4 id="roomReservationOnErrorMessage"></h4>
               </header>
                <section>
                    <button onclick="initialMainRoom()">Try again.</button>
                </section>
            </section>
        </section>
    </section>
    
</section>
<section class="popup" id="popup">
    <section class="popup-content">
        <section id="popupOnInitial" style="display:none">
            <header id="popupOnInitialHeader">
            </header>
            <section id="popupOnInitialBody">
            </section>
            <footer class="center-row-flex">
                <button onclick="document.getElementById('popup').style.display = 'none';" class="popup-button popup-button-secondary">cancel</button>
                <button id="popupOnInitialCofirmButton" class="popup-button popup-button-primary"></button>
            </footer>
        </section>
        <section id="popupOnLoading" style="display:none">
            <header>
                <h3 class="popup-header">Please wait a moment...</h3>
            </header>
            <div class="center-row-flex">
                <div class="loader"></div>
            </div>
            
        </section>
        <section id="popupOnSuccess" style="display:none;">
            <header class="popup-header">
                <h3>Successed.</h3>
            </header>
            <div class="center-row-flex">
                <span class="material-icons popup-icon correct-icon correct-icon">
                    check_circle
                </span>
            </div>
           
            <footer class="center-row-flex"> 
                <button id="popupOnSuccessConfirmButton" ;"  class="popup-button popup-button-primary">ok</button>
            </footer>
        </section>
        <section id="popupOnError" style="display:none;">
            <hader>
                <h3  class="popup-header">Failed!</h3>
                <h4 class="popup-header-2" id="popupOnErrorMessage"></h4>
                <h4 class="popup-header-2" >Please try again.</h4>
            </hader>
            <div class="center-row-flex">
                <span class="material-icons popup-icon correct-icon incorrect-icon">
                    cancel
                </span>
            </div>
            <footer class="center-row-flex">
                <button onclick="document.getElementById('popup').style.display = 'none';document.getElementById('popupOnError').style.display='none'" class="popup-button popup-button-primary">ok</button>
            </footer>
        </section>
    </section>
</section>
<section class="popup" id="profileDataPopup">
    <section class="popup-content" id="profileDataPopupContent">
     </section>
</section>
<script src="~/js/Dashboard.js"></script>

