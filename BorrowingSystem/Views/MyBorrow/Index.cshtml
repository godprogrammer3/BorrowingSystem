
@{
    ViewData["Title"] = "Index";
}

<header id="myborrowHeader">
    <h1 id="myBrroeHeaderTitle">MY BORROW</h1>
    <div style="flex:1;"></div>
    <output id="currentTime">00:00</output>
    <img id="userProfileImage" src="~/img/user-profile.svg" alt="user profile picture" />
</header>
<section id="bodySection">
    <section id="bodySectionOnLoading" style="display:block">
        <div class="loader"></div>
    </section>
    <section id="bodySectionOnSuccess" style="display:none">
    </section>
    <section id="bodySectionOnError" style="display:none">
        <header>Failed! Please try again.</header>
        <section>
            <button onclick="initialMyBorrow();">Try again.</button>
        </section>
    </section>
</section>
<section class="popup" id="popup">
    <section class="popup-content">
        <section id="popupOnInitial" style="display:none">
            <header id="popupOnInitialHeader">
            </header>
            <section id="popupOnInitialBody">
            </section>
            <footer id="popupOnInitialBodyFooter">
                <button id="popupOnInitialCancelButton" onclick="document.getElementById('popup').style.display = 'none';">cancel</button>
                <button id="popupOnInitialCofirmButton"></button>
            </footer>
        </section>
        <section id="popupOnLoading" style="display:none">
            <header class="popup-header">
                <h2 >Please wait a moment...</h2>
            </header>
            <div class="center-flex">
                <div class="loader"></div>
            </div>
            
        </section>
        <section id="popupOnSuccess" style="display:none;">
            <header class="popup-header">
                <h2>Successed.</h2>
            </header>
            <div class="center-flex">
                <span class="material-icons" id="correctIcon">
                    check_circle
                </span>
            </div>
           
            <footer>
                <button id="popupOnSuccessConfirmButton" class="popupButton popupButton-primary">ok</button>
            </footer>
        </section>
        <section id="popupOnError" style="display:none;" class="center-flex">
            <hader class="popup-header">
                <h3>Failed!</h3>
                <h4 id="popupOnErrorMessage"></h4>
                <h4>Please try again.</h4>
            </hader>
            <i class="material-icons popupIcon" id="popupFaildIcon">
                cancel
            </i>
            <footer class="center-flex">
                <button onclick="document.getElementById('popup').style.display = 'none';document.getElementById('popupOnError').style.display='none'" class="popupButton popupButton-primary">ok</button>
            </footer>
        </section>
    </section>
</section>

<script src="~/js/MyBorrow.js">
</script>



